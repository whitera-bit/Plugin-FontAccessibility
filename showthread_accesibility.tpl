<div class="index2_font-size">
<input type="button" value="-1px" onclick="decreaseFontSizeBy1px()">
<input type="button" value="+1px" onclick="increaseFontSizeBy1px()">
</div>
	
<script type="text/javascript" defer>
	function increaseFontSizeBy1px() {
	 txt = document.getElementById('post2_message');
	 style = window.getComputedStyle(txt, null).getPropertyValue("font-size");
  	 currentSize = parseFloat(style);
	 txt.style.fontSize = currentSize + 1 + "px";
}

	function decreaseFontSizeBy1px() {
  	txt = document.getElementById("post2_message");
 	 style = window.getComputedStyle(txt, null).getPropertyValue("font-size");
	  currentSize = parseFloat(style);
 	 txt.style.fontSize = currentSize - 1 + "px";
}
</script>	
